extends /layout

block css
    link(rel="stylesheet",href="/design-works/share/detail.css")
block js
    script(src="http://g.tbcdn.cn/kissy/k/1.3.1/kissy-min.js")
    script.
        seajs.use('/design-works/share/detail')

block content
    #main-container.wrapper-990.clearfix
        .main-content
            h1
                a.avatar
                    img(src="http://dribbble.s3.amazonaws.com/users/49563/avatars/original/f7c80d46.jpg?1325837502")
                span.title=docs.title
                span.category 【#{docs.category}】
                span.date 2013年6月

            .main-pic-container
                .main-pic
                    img(src="/read/#{docs.file_id.split(':')[0]}")
                -if(docs.ps_id.length>0)
                    .ps 附件下载
                        -docs.ps_id.forEach(function(item,index){
                            -item=item.split(':')
                                a(href="/read/#{item[0]}",download="#{item[1]}") #{item[1]}
                        -})
                -else
                    .ps 该文件没有附件
            #J-comment-container.J-comment-container(data-id="#{docs._id}")
                h2 3条评论
                #comment-container.comment-container
                    .item-container.new-comment.J-new-comment.ks-waterfall
                        textarea#J-comment-textarea(data-id="#{docs._id}")
                        .J-send-new-comment
                            button.J-send-new-comment-trigger.btn.btn-normal 发送

        .sidebar
            .des
                h2 设计简介：
                div=docs.content
                div.love-comment.clearfix
                    a.J-love.trigger
                        span.data-icon(data-icon!="&#xe009;")
                        span.text.J-text 喜欢
                    a.J-comment-trigger.trigger
                        span.data-icon(data-icon!="&#xe006;").
                        span.text.J-text 评论
                .banner
                    h2 更多
                    p
                        a.pic(herf="http://adfadfasdf")
                            img(src="/global/temp1.png")
                        a.pic(herf="#")
                            img(src="/global/temp2.png")
            .tag
                h2 相关标签
                .tag-control
                    -docs.tag.forEach(function(item){
                        a=item
                    -})

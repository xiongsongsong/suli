body
  font: 14px "华文细黑","微软雅黑",simsun,"Lucida Grande", Helvetica, Arial, sans-serif
  color:#333

a-color=#333333
hover-color=#ff3b35
bg-color=#bebfb3
wrapper-bg=#e7e7e7
input-text-field-color=#a1a1a1
upload-file-triggers-color=#a1a1a1
border-color=#ccc

a
  color: a-color
  text-decoration:none

a:hover
    color:#ff3b35

.wrapper
    margin-left:auto
    margin-right:auto

.hide
    display:none

.wrapper-990
    width:990px
    margin-left:auto
    margin-right:auto

.btn
    background:bg-color
    border-radius:2px
    display:inline-block
    border:none
    padding:3px 12px

.btn:focus
        outline:solid 1px hover-color

.btn:active
        outline:solid 1px hover-color


.btn-large
    padding:11px 24px
    font-size:16px

//导航
#navigation
    background:#fff
    height:80px

#navigation .wrapper-990
    position:relative

#navigation h1
    position:absolute
    font-size:56px
    color:#ff3b35

#navigation ul
    position:absolute
    top:37px
    right:0

#navigation ul li{
    float:left
    margin-left:32px
}


//面包屑

.crumbs
    padding:12px 0

.crumbs a.back
    font-size:20px

//登陆
#login-register-area .J-spector
    margin:0 1px

.login-small-dialog
    width:118px
    background:#e9e9e9
    border-radius:2px

.login-small-dialog div.title
    color:hover-color
    border-bottom:solid 1px border-color
    text-align:center
    padding-bottom:7px
    margin-bottom:8px

.login-small-dialog .wrapper
    width:92px
    padding:8px 0 12px 0
    margin:0 auto

.login-small-dialog input.text
    width:86px
    height:16px
    margin-bottom:5px
    border:solid 1px border-color
    font-size:12px
    padding-left:4px

#login-register-area
    height:19px
    position:relative
    overflow:hidden

#login-register-area .J-login-register-triggers
    overflow:hidden

#login-register-area .login-user-info
